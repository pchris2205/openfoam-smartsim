FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
    	type            	fixedValue;
        value           	uniform (0 1.5 0);
    }

    outlet
    {
    	type                inletOutlet;
        inletValue          uniform (0 0 0);     
    }

    top
    {
        type            noSlip;
    }

    bottom
    {
        type            noSlip;
    }

    side1
    {
        type            noSlip;
    }
    side2
    {
        type            noSlip;
    }
    solid
    {
        type            noSlip;
    }
}

